<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_photos">

    <fragment
        android:id="@+id/nav_photos"
        android:name="com.denishrynkevich.photomaptestapp.ui.photos.PhotoFragment"
        android:label="@string/menu_photos"
        tools:layout="@layout/fragment_photo">
        <action
            android:id="@+id/action_nav_photos_to_commentsFragment"
            app:destination="@id/commentsFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_map"
        android:name="com.denishrynkevich.photomaptestapp.ui.map.MapFragment"
        android:label="@string/menu_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/commentsFragment"
        android:name="com.denishrynkevich.photomaptestapp.ui.comments.CommentsFragment"
        tools:layout="@layout/fragment_comments">
        <argument
            android:name="id"
            app:argType="integer" />
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="date"
            app:argType="string" />
    </fragment>

</navigation>